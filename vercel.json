{
  "version": 2,
  "builds": [
    { "src": "/api/index.php", "use": "vercel-php@0.6.0" },
    { "src": "/public/**", "use": "@vercel/static" },
    { "src": "/admin/**", "use": "vercel-php@0.6.0" }
  ],
  "routes": [
    {
      "src": "/(css|fonts|images|js|uploads)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
